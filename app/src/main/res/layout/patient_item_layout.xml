<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.cloudrecovery.DoctorPlanView.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/iv_p_item_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/tv_p_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_p_item_photo"/>
            <TextView
                android:id="@+id/tv_p_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_p_item_photo"
                android:layout_below="@id/tv_p_item_name"/>
            <TextView
                android:id="@+id/tv_p_item_nearlyupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_p_item_nickname"
                android:layout_below="@id/tv_p_item_name"/>
            <TextView
                android:id="@+id/tv_p_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/rl_p_item_totop"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ffff00">
                <View
                    android:layout_centerInParent="true"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/totop"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_p_item_delete"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff9900">
                <View
                    android:layout_centerInParent="true"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/delete"/>
            </RelativeLayout>
        </LinearLayout>
    </com.example.cloudrecovery.DoctorPlanView.SwipeLayout>

</LinearLayout>